<h1>Edit Item</h1>

<%= form_with(model: [:admin, @item], local: true) do |form| %>
<% if @item.errors.any? %>
    <div style="color: red; background: #ffe6e6; padding: 15px;
margin-bottom: 20px; border: 1px solid red;">
    <h4><%= pluralize(@item.errors.count, "error") %> prohibited this
item from being saved:</h4>
    <ul>
        <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    </div>
<% end %>

<div style="margin-bottom: 15px;">
    <%= form.label :name, style: "display: block; font-weight: bold;
margin-bottom: 5px;" %>
    <%= form.text_field :name, style: "width: 100%; padding: 8px; border:
1px solid #ccc;" %>
</div>

<div style="margin-bottom: 15px;">
    <%= form.label :description, style: "display: block; font-weight:
bold; margin-bottom: 5px;" %>
    <%= form.text_area :description, rows: 4, style: "width: 100%;
padding: 8px; border: 1px solid #ccc;" %>
</div>

<div style="margin-bottom: 15px;">
    <%= form.label :price, style: "display: block; font-weight: bold;
margin-bottom: 5px;" %>
    <%= form.number_field :price, step: 0.01, style: "width: 100%;
padding: 8px; border: 1px solid #ccc;" %>
</div>

<div style="margin-bottom: 15px;">
    <%= form.label :category_id, "Category", style: "display: block;
font-weight: bold; margin-bottom: 5px;" %>
    <%= form.select :category_id,
options_from_collection_for_select(Category.all, :id, :name,
@item.category_id),
                    { prompt: "Select a category" },
                    { style: "width: 100%; padding: 8px; border: 1px
solid #ccc;" } %>
</div>

<div style="margin-bottom: 15px;">
    <%= form.label :condition, style: "display: block; font-weight: bold;
margin-bottom: 5px;" %>
    <%= form.select :condition,
                    options_for_select([
                    ["Excellent", "Excellent"],
                    ["Good", "Good"],
                    ["Fair", "Fair"],
                    ["Poor", "Poor"]
                    ], @item.condition),
                    { prompt: "Select condition" },
                    { style: "width: 100%; padding: 8px; border: 1px
solid #ccc;" } %>
</div>

<div style="margin-bottom: 15px;">
    <%= form.label :year_made, style: "display: block; font-weight: bold;
margin-bottom: 5px;" %>
    <%= form.number_field :year_made, style: "width: 100%; padding: 8px;
border: 1px solid #ccc;" %>
</div>

<div style="margin-bottom: 15px;">
    <%= form.label :image_url, style: "display: block; font-weight: bold;
margin-bottom: 5px;" %>
    <%= form.file_field :image, style: "width: 100%; padding: 8px;
border: 1px solid #ccc;" %>
</div>

<div style="margin-top: 20px;">
    <%= form.submit "Update Item", style: "background-color: #007bff;
color: white; padding: 10px 20px; border: none; border-radius: 5px;
cursor: pointer;" %>
    <%= link_to "Show", admin_item_path(@item), style: "margin-left:
10px; color: #6c757d;" %>
    <%= link_to "Back", admin_items_path, style: "margin-left: 10px;
color: #6c757d;" %>
</div>
<% end %>