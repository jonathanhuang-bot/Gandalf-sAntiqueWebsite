<div class="admin-page">
  <div class="admin-header">
    <h1 class="admin-title">Manage Items</h1>
    <div class="admin-nav">
      <%= link_to "Manage Categories", admin_categories_path, class: "admin-nav-link" %>
      <%= link_to "View Site", "/", class: "admin-nav-link" %>
    </div>
  </div>

  <div class="admin-actions">
    <%= link_to "+ Add New Item", new_admin_item_path, class: "admin-btn-primary" %>
  </div>

  <div class="admin-table-container">
    <table class="admin-table">
      <thead>
        <tr>
          <th>Order</th>
          <th>Name</th>
          <th>Category</th>
          <th>Price</th>
          <th>Condition</th>
          <th>Year</th>
          <th class="actions-column">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.position || '-' %></td>
            <td class="item-name-cell"><%= item.name %></td>
            <td><%= item.category.name %></td>
            <td>$<%= number_with_precision(item.price, precision: 2) %></td>
            <td><%= item.condition %></td>
            <td><%= item.year_made %></td>
            <td class="actions-cell">
              <%= link_to "View", admin_item_path(item), class: "action-link" %>
              <%= link_to "Edit", edit_admin_item_path(item), class: "action-link" %>
              <%= link_to "Delete", admin_item_path(item),
                  data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to delete this item?" },
                  class: "action-link action-delete" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
