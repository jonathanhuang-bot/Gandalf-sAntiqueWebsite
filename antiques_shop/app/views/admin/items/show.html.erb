<div class="admin-page">
  <div class="admin-header">
    <h1 class="admin-title">Item Details</h1>
    <div class="admin-nav">
      <%= link_to "â† Back to Items", admin_items_path, class: "admin-nav-link" %>
    </div>
  </div>

  <!-- Product Preview (same as customer view) -->
  <div class="product-container">
    <!-- Left Column: Product Image -->
    <div class="product-image-section">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, alt: @item.name, class: "product-image" %>
      <% else %>
        <div class="product-image-placeholder">
          <span>No Image Available</span>
        </div>
      <% end %>
    </div>

    <!-- Right Column: Product Information -->
    <div class="product-info-section">
      <h1 class="product-title"><%= @item.name %></h1>

      <p class="product-price">$<%= number_with_precision(@item.price, precision: 2) %></p>

      <div class="product-details">
        <div class="detail-row">
          <span class="detail-label">Category</span>
          <span class="detail-value"><%= @item.category.name %></span>
        </div>

        <div class="detail-row">
          <span class="detail-label">Condition</span>
          <span class="detail-value"><%= @item.condition %></span>
        </div>

        <div class="detail-row">
          <span class="detail-label">Year Made</span>
          <span class="detail-value"><%= @item.year_made %></span>
        </div>

        <div class="detail-row">
          <span class="detail-label">Display Order</span>
          <span class="detail-value"><%= @item.position || 'Not set' %></span>
        </div>
      </div>

      <div class="product-description">
        <h3 class="description-title">Description</h3>
        <p class="description-text"><%= @item.description %></p>
      </div>

      <!-- Admin Actions -->
      <div class="admin-item-actions">
        <%= link_to "Edit Item", edit_admin_item_path(@item), class: "admin-btn-primary" %>
        <%= link_to "Delete Item", admin_item_path(@item),
            data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to delete this item?" },
            class: "admin-btn-delete" %>
      </div>
    </div>
  </div>
</div>
