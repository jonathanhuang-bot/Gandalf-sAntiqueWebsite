<div class="admin-page">
  <div class="admin-header">
    <h1 class="admin-title">Edit Category</h1>
    <div class="admin-nav">
      <%= link_to "â† Back to Categories", admin_categories_path, class: "admin-nav-link" %>
    </div>
  </div>

  <div class="admin-form-container">
    <%= form_with(model: [:admin, @category], local: true, class: "admin-form") do |form| %>
      <% if @category.errors.any? %>
        <div class="form-errors">
          <h4><%= pluralize(@category.errors.count, "error") %> prevented this category from being saved:</h4>
          <ul>
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, "Category Name", class: "form-label" %>
        <%= form.text_field :name, class: "form-input", placeholder: "e.g., Furniture, Jewelry, Books..." %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, rows: 4, class: "form-textarea", placeholder: "Brief description of this category..." %>
      </div>

      <div class="form-actions">
        <%= form.submit "Update Category", class: "admin-btn-primary" %>
        <%= link_to "Cancel", admin_categories_path, class: "admin-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
