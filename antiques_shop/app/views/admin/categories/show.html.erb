<h1><%= @category.name %></h1>

<div style="background: #f8f9fa; padding: 20px; border: 1px solid
#dee2e6; border-radius: 5px; margin-bottom: 20px;">
<p><strong>Description:</strong> <%= @category.description %></p>
<p><strong>Number of Items:</strong> <%= @category.items.count %></p>
</div>

<h3>Items in this Category:</h3>
<% if @category.items.any? %>
<table style="width: 100%; border-collapse: collapse;">
    <thead>
    <tr style="background-color: #f8f9fa;">
        <th style="border: 1px solid #ddd; padding: 12px; text-align:
left;">Name</th>
        <th style="border: 1px solid #ddd; padding: 12px; text-align:
left;">Price</th>
        <th style="border: 1px solid #ddd; padding: 12px; text-align:
left;">Condition</th>
        <th style="border: 1px solid #ddd; padding: 12px; text-align:
left;">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @category.items.each do |item| %>
        <tr>
        <td style="border: 1px solid #ddd; padding: 12px;"><%=
item.name %></td>
        <td style="border: 1px solid #ddd; padding: 12px;">$<%=
item.price %></td>
        <td style="border: 1px solid #ddd; padding: 12px;"><%=
item.condition %></td>
        <td style="border: 1px solid #ddd; padding: 12px;">
            <%= link_to "Edit Item", edit_admin_item_path(item), style:
"color: #007bff;" %>
        </td>
        </tr>
    <% end %>
    </tbody>
</table>
<% else %>
<p style="color: #6c757d; font-style: italic;">No items in this
category yet.</p>
<% end %>

<div style="margin-top: 20px;">
<%= link_to "Edit Category", edit_admin_category_path(@category),
style: "background-color: #ffc107; color: black; padding: 10px 20px;
text-decoration: none; border-radius: 5px; margin-right: 10px;" %>
<%= link_to "Back to Categories", admin_categories_path, style: "color:
#6c757d;" %>
</div>